#include <iostream>
#include <conio.h>

using namespace std;

void cargar(int vec[],int n)
{
	int i;
	for(i=0;i<n;i++)
	{
		cout << "Ingrese el elemento: ";
		cin >> vec[i];
	}
}
bool verif_primo(int n)
{
	int i;
	bool k=true;
	for(i=2;i<n;i++)
	{
		if(n%i==0)
		{
			k=false;
		}
	}
	return k;
}

void eliminar_primo(int vec[], int &n)
{
	int i,j;
	for(i=0;i<n;i++)
	{
		if(verif_primo(vec[i])==true)
		{
				for(j=i;j<n-1;j++)
				{
				
					vec[j]=vec[j+1];
				}

				n--;
				i--;
		}
	}	
}
int obtenerNsimoprimo(int n)
{
	int cp=0,c=0;
	while(n>cp)
	{
		c++;
		if(verif_primo(c)==true)
		{
			cp++;
		}
	}
	return c;
}


		
void funcion_primo(int vec[],int n)
{
	int i,k=0,is=0,ib=n-1;
	for(i=0;i<n;i++)
	{
		if(k==0)
		{
			vec[is]=obtenerNsimoprimo(i+1);
			is++;
			k=1;
		}
		else
		{
			vec[ib]=obtenerNsimoprimo(i+1);
			ib--;
			k=0;
		}
	}

}



void ordenar_ascendentemente(int vec[],int n)
{
	int i,aux,j;
	for(i=0;i<n;i++)
	{
		for(j=i+1;j<n;j++)
		{
			if(vec[i]>vec[j])
			{
				aux=vec[i];
				vec[i]=vec[j];
				vec[j]=aux;
			}
		}
	}
}



void mostrar(int vec[],int n)
{
	int i;
	for(i=0;i<n;i++)
	{
		cout << vec[i] << " || ";
	}
}

void main()
{
	int vec[50],a;
	cout << "Ingrese el tamaÃ±o del vector :";
	cin >> a;

	cargar(vec,a);
	//funcion_primo(vec,a);
	ordenar_ascendentemente(vec,a);
	mostrar(vec,a);

	
	getch();
}

